---
// Header Component - Upclub Style
---

<header class="bg-white shadow-md fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <nav class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="hover:opacity-80 transition-opacity duration-300">
          <img src="/logo.svg" alt="로잉프로" class="h-14 w-auto" />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-1">
        <a href="/" class="text-text hover:text-primary px-4 py-2 transition-colors duration-300 font-bold text-sm uppercase tracking-wide">Home</a>
        <a href="/about" class="text-text hover:text-primary px-4 py-2 transition-colors duration-300 font-bold text-sm uppercase tracking-wide">About</a>
        <a href="/programs" class="text-text hover:text-primary px-4 py-2 transition-colors duration-300 font-bold text-sm uppercase tracking-wide">Programs</a>
        <a href="/service" class="text-text hover:text-primary px-4 py-2 transition-colors duration-300 font-bold text-sm uppercase tracking-wide">Service</a>
        <a href="/track-record" class="text-text hover:text-primary px-4 py-2 transition-colors duration-300 font-bold text-sm uppercase tracking-wide">Results</a>
        <a href="/contact" class="ml-4 bg-primary hover:bg-orange text-white font-bold px-8 py-3 rounded transition-all duration-300 transform hover:scale-105 text-sm uppercase tracking-wide">Contact</a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="text-text hover:text-primary transition-colors duration-300">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>
